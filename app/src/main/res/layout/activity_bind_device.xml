<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0099ff"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.aigo.router.ui.activity.BindDeviceActivity">

    <TextView
        android:id="@+id/tv_bind_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autoLink="all"
        android:text="先不绑定了"
        android:textColor="@color/color_fefefe" />

    <TextView
        android:id="@+id/tv_bind_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定设备"
        android:textColor="@color/color_fefefe"
        android:textSize="25sp"
        android:layout_below="@+id/tv_bind_device"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/tv_bind_device_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="请保持设备靠近路由器和手机"
        android:textColor="@color/color_fefefe"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_bind_device_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bind_device_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/drw_1_bind_device_icon" />

    <TextView
        android:id="@+id/tv_searching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/color_fefefe"
        android:layout_below="@+id/iv_bind_device_icon"
        android:textSize="14sp"
        android:visibility="gone"
        android:text="正在搜索设备..."/>

    <Button
        android:id="@+id/btn_start_use"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_bind_device_icon"
        android:layout_marginTop="50dp"
        android:background="@drawable/drw_1_shape_half_circle_rectangle_ffffff"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="立即使用"
        android:visibility="gone"
        android:textColor="@color/color_ffffff" />

    <LinearLayout
        android:id="@+id/linear_bind_device_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_bind_device_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/drw_1_bind_device_dots_icon" />

            <TextView
                android:id="@+id/tv_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="开启手机蓝牙"
                android:textColor="@color/color_fefefe"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/drw_1_bind_device_dots_icon" />

            <TextView
                android:id="@+id/tv_aigo_kt03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="长按5秒设备，直至红色指示灯亮起"
                android:textColor="@color/color_fefefe"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/drw_1_bind_device_dots_icon" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:text="保持设备在wifi有效范围内"
                android:textColor="@color/color_fefefe"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/drw_1_bind_device_dots_icon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="点击下方“开始绑定”按钮"
                android:textColor="@color/color_fefefe"
                android:textSize="15sp" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_start_bind"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/drw_1_shape_solid_half_circle_rectangle_ffffff"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="开始绑定"
        android:textColor="@color/color_0099ff" />


</RelativeLayout>
