<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_tip_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drw_1_tip_guide_1"
        android:scaleType="fitXY"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/btn_understand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:gravity="center"
        android:src="@drawable/drw_1_my_understand"
        android:textColor="@color/white" />


    <RelativeLayout
        android:id="@+id/relative_layout_understand"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginBottom="140dp">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_understand"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="-30dp"
            android:text="不再提醒"
            android:textColor="@color/color_ffffff"

            />


        <ImageView
            android:id="@+id/iv_understand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/drw_1_my_understand" />

    </RelativeLayout>


</RelativeLayout>