<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_efeff4"
    android:orientation="vertical"
    tools:context="com.aigo.router.ui.activity.AddContactActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_cccccc" />

    <EditText
        android:id="@+id/et_add_remark"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:textColorHint="@color/color_808080"
        android:textSize="14sp"
        android:hint="给联系人添加备注"
        android:paddingLeft="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_cccccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/color_ffffff"
        >

        <com.aigo.router.ui.view.DelayButton
            android:id="@+id/btn_verification_code"
            android:layout_width="112dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_0099ff"
            android:background="@drawable/drw_1_shape_solid_rectangle_eeeeee"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:text="获取验证码" />

        <EditText
            android:id="@+id/et_input_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:background="@color/color_ffffff"
            android:hint="请输入11位手机号码"
            android:textSize="14sp"
            android:textColorHint="@color/color_808080"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_cccccc" />

    <EditText
        android:id="@+id/et_input_verification_code"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:hint="请输入验证码"
        android:textSize="14sp"
        android:textColorHint="@color/color_808080"
        android:paddingLeft="15dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_cccccc" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/drw_1_shape_rectangle_018ffd"
        android:text="完成"
        android:textColor="@color/color_ffffff" />


</LinearLayout>
